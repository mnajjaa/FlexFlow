<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.bty.Controllers.LoginController"
            styleClass="login_container" stylesheets="@../Styles/login.css"
            prefHeight="400.0" prefWidth="600.0">
    <VBox prefHeight="400.0" prefWidth="200.0" styleClass="login_logo_container" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
        <FontAwesomeIconView glyphName="BANK" size="30"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Maze Bank"/>
    </VBox>
    <VBox layoutX="222.0" layoutY="42.0" prefHeight="350.0" prefWidth="350.0" styleClass="login_form_container"
          AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <Label id="choice-prompt-text" text="Choose Your Account Type:"/>
        <ChoiceBox fx:id="acc_selector" prefWidth="150.0" styleClass="account_selector"/>
        <Label fx:id="email_address_lbl" text="Email"/>
        <TextField fx:id="email_address_fld" styleClass="input_field"/>
        <Label fx:id="password_lbl" text="Password:"/>
        <TextField fx:id="password_fld" styleClass="input_field"/>
        <Button fx:id="login_btn" mnemonicParsing="false" text="Button"/>
        <Label fx:id="error_lbl" styleClass="error_lbl" text="Error:"/>
    </VBox>
</AnchorPane>
